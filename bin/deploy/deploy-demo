#!/bin/bash

export HELM_EXPERIMENTAL_OCI=1
export HELM_RELEASE_NAME=ams-demo
export KUBE_NAMESPACE=ams-demo
export HELM_EXTRA_ARGS="--values ops/demo-deploy.yaml"
export KUBECONFIG=./digital-eks-dev.kubeconfig.yml
export SOLR_PASSWORD="-"
export MYSQL_PASSWORD=${MYSQL_PASSWORD_DEMO}
export TAG=$1
export DEPLOY_TAG=$1
export REPO_LOWER=wgbh-mla/ams

export DEPLOY_IMAGE=ghcr.io/${REPO_LOWER}
export WORKER_IMAGE=ghcr.io/${REPO_LOWER}/worker
DOLLAR=$ envsubst < ops/demo-deploy.tmpl.yaml > ops/demo-deploy.yaml
./bin/helm_deploy ams-demo ams-demo
