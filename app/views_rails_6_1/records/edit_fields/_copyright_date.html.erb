<% if f.object.multiple? key %>
  <%= f.input :copyright_date, as: :multiple_date,wrapper_html: { class: 'multi_value' }, disabled:f.object.respond_to?(:disabled?) && f.object.disabled?(key), input_html: { class: 'form-control' }, required: f.object.required?(key) %>
<% else %>
  <%= f.input :copyright_date, as: :date, html5: true , disabled:f.object.respond_to?(:disabled?) && f.object.disabled?(key), required: f.object.required?(key) %>
<% end %>