<% if f.object.multiple? key %>
  <%= f.input :annotation, as: :multi_value, input_html: { rows: '14', type: 'textarea'}, disabled:f.object.respond_to?(:readonly?) && f.object.readonly?(key), required: f.object.required?(key) %>
<% else %>
  <%= f.input :annotation, as: :text, input_html: { rows: '14' }, disabled:f.object.respond_to?(:readonly?) && f.object.readonly?(key), required: f.object.required?(key) %>
<% end %>