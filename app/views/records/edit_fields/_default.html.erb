<% if f.object.class.multiple? key %>
  <%= f.input key, as: :multi_value, input_html: { class: 'form-control' }, disabled:f.object.respond_to?(:readonly?) && f.object.readonly?(key) , required: f.object.required?(key) %>
<% else %>
  <%= f.input key, required: f.object.required?(key), disabled:f.object.respond_to?(:readonly?) && f.object.readonly?(key)  %>
<% end %>